@model Clinic_Registry.ViewModels.DoctorsListViewModel
@{
    ViewBag.Title = "DoctorsList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of doctors</h2>

@Html.ActionLink("Add new doctor profile", "CreateNew", null, new { @class = "btn btn-primary"})

<p style="padding-top: 0.8em"></p>

<table id="doctors" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Specialization</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model.DoctorsList)
        {
            <tr>
                <td>@doctor.Name</td>
                <td>@doctor.Specialization.Name</td>
                <td>@Html.ActionLink("Details", "Details", new { id = doctor.Id })</td>
            </tr>
        }
    </tbody>
</table>


@section scripts
    {
    <script>
        $(document).ready(function () {$("#doctors").DataTable();})
    </script>

}